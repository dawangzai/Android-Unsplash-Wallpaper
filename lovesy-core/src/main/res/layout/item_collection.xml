<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="5dp"
    android:clickable="true"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wangzai.lovesy.core.widget.SimpleImageView
            android:id="@+id/siv_photo"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_collection_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">

            <com.wangzai.lovesy.core.widget.SimpleImageView
                android:id="@+id/siv_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:roundAsCircle="true" />

            <Space
                android:layout_width="@dimen/space_10"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/text_E9EAED"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_collection_photo_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/text_E9EAED"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>