<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    android:clickable="true"
    app:cardBackgroundColor="@color/windowBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wangzai.lovesy.core.widget.SimpleImageView
            android:id="@+id/dvPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:placeholderImage="@color/image_place_color"
            app:roundedCornerRadius="@dimen/dp_10" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:text="你好"
            android:textColor="@color/text_color_white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <com.wangzai.lovesy.core.widget.SimpleImageView
                android:id="@+id/dvUserHead"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:roundAsCircle="true" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#dee0e0"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>