<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wangzai.lovesy">

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.wangzai.lovesy.LoveSyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/LoveSyTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/ThemeMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".home.HomeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <activity
            android:screenOrientation="portrait"
            android:name=".sign.SignInActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/ThemeSignInActivity" />

        <activity
            android:screenOrientation="portrait"
            android:name=".user.UserProfileActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".detail.photo.PhotoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:process=":remote"
            android:theme="@style/ThemePhotoActivity" />

        <activity
            android:screenOrientation="portrait"
            android:name=".detail.collection.CollectionDetailActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />

    </application>

</manifest>