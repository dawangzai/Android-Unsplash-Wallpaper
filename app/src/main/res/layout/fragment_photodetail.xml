    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.cleverzheng.wallpaper.view.widget.PhotoImageView
            android:id="@+id/photoDraweeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_transparent"
            android:paddingTop="@dimen/toolbar_padding_top"
            android:scaleType="center"
            android:src="@mipmap/ic_action_return" />

        <LinearLayout
            android:id="@+id/llRightTools"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/color_transparent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivYuantu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#55000000"
                android:scaleType="center"
                android:src="@mipmap/yuantu_48" />
            <!--<com.cleverzheng.wallpaper.view.widget.DraweeImageView-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--app:actualImageUri="http://frescolib.org/static/sample-images/animal_b_l.jpg"-->
            <!--app:roundedCornerRadius="16dp"-->
            <!--app:actualImageScaleType="center"/>-->

            <ImageView
                android:id="@+id/ivDownload"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="#55000000"
                android:scaleType="center"
                android:src="@mipmap/download_48" />

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="#55000000"
                android:scaleType="center"
                android:src="@mipmap/share_48" />
        </LinearLayout>

    </RelativeLayout>

